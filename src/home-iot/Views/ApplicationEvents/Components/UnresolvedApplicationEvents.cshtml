@model IEnumerable<HomeIot.Models.ApplicationEventViewModel>

<h3>Nové události</h3>
<div style="max-height:400px;overflow-y:auto">
    <table class="table">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Timestamp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SensorName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.GetIconPath()" title="@item.EventType.GetText()" width="20" height="20" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Timestamp)
                    </td>
                    <td>
                        @Html.ActionLink(item.SensorName, "Detail", "Sensors", new { sensorId = item.SensorId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>